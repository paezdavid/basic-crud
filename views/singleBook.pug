extends layout

block content
    .wrapper 
        header 
            div
                h1 Operaciones CRUD.
            nav 
                a(href="/form")  CREATE 
                a(href="/")  READ

        main 
            h2 #{book.bookName}
            h3 Autor: #{book.author}
            h3 Género: #{book.genre}
            h3 Páginas: #{book.pages}
            h3 Año: #{book.year}
            
            a(href=`/update/${book._id}`).updateBookBtn Actualizar libro 

            form(action=`/delete/${book._id}` method="post")  
                input(type="submit" value="Borrar libro")

            